# ============================================================================
# XRPL Impact Fund - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values

# ============================================================================
# MongoDB Configuration (REQUIRED)
# ============================================================================
# Pour MongoDB Atlas (Cloud - Recommandé)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/xrpl-impact-map?retryWrites=true&w=majority

# Pour MongoDB Local
# MONGODB_URI=mongodb://localhost:27017/xrpl-impact-map

# ============================================================================
# XRPL Configuration
# ============================================================================
# Network URL
XRPL_NETWORK=wss://s.altnet.rippletest.net:51233
# Pour Mainnet: wss://xrplcluster.com

# Wallet Oracle (pour débloquer les escrows)
ORACLE_SEED=sYourOracleSeedHere

# Pool wallet (optionnel)
XRPL_WALLET_ADDRESS=
XRPL_WALLET_SEED=

# ============================================================================
# Encryption & Security
# ============================================================================
# Clé de chiffrement AES-256 (32 bytes)
# Générer: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# JWT Secret (pour l'authentification)
JWT_SECRET=your-jwt-secret-here

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
PORT=3001

# CORS Origins (séparés par des virgules)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# KYC Configuration (Optionnel)
# ============================================================================
KYC_RISK_THRESHOLD_HIGH=60
KYC_RISK_THRESHOLD_MEDIUM=30
KYC_VALIDITY_DAYS=365

# ============================================================================
# Xaman/Xumm Configuration (Optionnel)
# ============================================================================
XAMAN_API_KEY=
XAMAN_WEBHOOK_URL=

# ============================================================================
# AI/ML Configuration (Optionnel)
# ============================================================================
# Pour le trading algorithm
TRADING_ENABLED=false
TRADING_RISK_LEVEL=low

# ============================================================================
# Frontend URL (pour CORS et redirections)
# ============================================================================
FRONTEND_URL=http://localhost:5173

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
# Options: error, warn, info, debug

# ============================================================================
# Notes
# ============================================================================
# 1. Ne committez JAMAIS ce fichier avec vos vraies valeurs!
# 2. MongoDB Atlas est recommandé pour le développement (tier gratuit disponible)
# 3. Tous les secrets Oracle sont chiffrés avec ENCRYPTION_KEY avant stockage
# 4. Pour production, utilisez un KMS pour stocker ORACLE_SEED
